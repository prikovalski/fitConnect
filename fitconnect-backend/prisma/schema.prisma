generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String
  role      Role
  createdAt DateTime @default(now())
}

enum Role {
  PATIENT
  TRAINER
  NUTRITIONIST
}